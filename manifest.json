{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "name": "VSTS Ose",
  "description": "VSTS Chrome extension for pull requests in multiple repositories",
  "version": "1.0.0",

  "browser_action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources" :[
      "/pullRequest/pullRequest.html",
      "/member/member.html",
      "/spinner/spinner.html"
  ],
  "permissions": [
    "webNavigation",
    "webRequest",
    "alarms"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  }
}